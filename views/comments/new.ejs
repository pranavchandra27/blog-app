<%include ../partials/header %>

<div class="container">
    <h1 class="text-center mt-3"><i class="fas fa-comments"></i> Add New Comment</h1>
    <div class="row mt-1">
        <div class="col-md-4 m-auto">
            <div class="card-body">
                <form action="/blogs/<%= blog._id%>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="title" placeholder="Comment Goes Here...">
                    </div>
                    <button type="submit" class="btn btn-info btn-block">Add</button>
                </form>
                <p class="lead"><a href="/blogs/<%= blog._id %>">Go Back</a></p>
            </div>
        </div>
    </div>
</div>
<%include ../partials/footer %>