<%include ../partials/header %>

<div class="container">
    <h1 class="text-center mt-3"><i class="far fa-comments"></i> Edit Comment</h1>
    <div class="row mt-1">
        <div class="col-md-4 m-auto">
            <div class="card-body">
                <form action="/blogs/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="title" value="<%= comment.title %>">
                    </div>
                    <button type="submit" class="btn btn-info btn-block">Update</button>
                </form>
                <p class="lead"><a href="/blogs/<%= blog_id %>">Go Back</a></p>
            </div>
        </div>
    </div>
</div>

<%include ../partials/footer %>