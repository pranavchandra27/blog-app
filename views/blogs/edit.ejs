<%include ../partials/header %>
<div class="container">
    <h3 class='text-center mt-3'>Edit <%= blogs.title%></h3>
    <div class="row mt-3">
        <div class="col-md-4">
        </div>

        <div class='col-md-4'>
            <form action="/blogs/<%= blogs._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="blog[title]" value="<%=blogs.title%>" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="text" name="blog[image]" value="<%=blogs.image%>" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="text" name="blog[body]" value="<%=blogs.body%>" class="form-control" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
        </div>

        <div class="col-md-4">
        </div>
    </div>
</div>

<%include ../partials/header %>